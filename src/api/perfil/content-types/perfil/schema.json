{
  "kind": "collectionType",
  "collectionName": "perfiles",
  "info": {
    "singularName": "perfil",
    "pluralName": "perfiles",
    "displayName": "Perfil",
    "description": "Perfiles/PINEs de las cuentas de streaming"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "cuenta": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::cuenta.cuenta",
      "inversedBy": "perfiles",
      "required": true
    },
    "cliente": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::cliente.cliente",
      "inversedBy": "perfiles"
    },
    "codigo_pin": {
      "type": "string",
      "required": true,
      "maxLength": 10
    },
    "nombre_perfil": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "tipo_dispositivo": {
      "type": "enumeration",
      "enum": ["TV", "Cel", "Tablet", "PC"],
      "default": "TV",
      "required": true
    },
    "fecha_activacion": {
      "type": "date",
      "required": true
    },
    "fecha_vencimiento": {
      "type": "date",
      "required": true
    },
    "estado": {
      "type": "enumeration",
      "enum": ["activo", "por_vencer", "vencido", "suspendido"],
      "default": "activo",
      "required": true
    },
    "precio_individual": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "notas": {
      "type": "text"
    }
  }
}
